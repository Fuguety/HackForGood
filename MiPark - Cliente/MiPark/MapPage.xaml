<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiPark.MapPage"
             Title="Mapa">

    <VerticalStackLayout Spacing="10" Padding="10">
        <HorizontalStackLayout Spacing="10">
            <Button Text="Buscar cerca de mí" Clicked="OnSearchNearMeClicked"/>
            <Button Text="Buscar por dirección" Clicked="OnSearchByAddressClicked"/>
            <Button Text="Reservar estacionamiento" Clicked="OnReserveGarageClicked"/>
        </HorizontalStackLayout>
        <WebView x:Name="webView" 
                 HeightRequest="400"  
            HorizontalOptions="FillAndExpand" 
                 VerticalOptions="FillAndExpand"/>
    </VerticalStackLayout>
</ContentPage>