<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiPark.RegisterPage"
             Title="Registro">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            
            <Entry x:Name="emailEntry" Placeholder="Correo Eletronico"/>
            <Entry x:Name="dniEntry" Placeholder="DNI"/>
            <Entry x:Name="usernameEntry" Placeholder="Nombre de usuario"/>
            <Entry x:Name="surnameEntry" Placeholder="Appellidos"/>
            <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="true"/>
            <Entry x:Name="confirmPasswordEntry" Placeholder="Confirmar contraseña" IsPassword="true"/>
            <Entry x:Name="phoneNumberEntry" Placeholder="Telefono"/>

            <Button Text="Registrarse" Clicked="OnRegisterButtonClicked"/>
            <Button Text="Volver" Clicked="OnVolverButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
