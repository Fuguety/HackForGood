<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiPark.RegisterVehiclePage"
             Title="Registro de Vehículo">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <Entry x:Name="matriculaEntry" Placeholder="Matrícula del Vehículo"/>
            <Picker x:Name="brandPicker" Title="Marca" SelectedIndexChanged="BrandPicker_SelectedIndexChanged"/>
            <Picker x:Name="modelPicker" Title="Modelo" IsEnabled="False"/>
            <Picker x:Name="colorPicker" Title="Color"/>
            <Button Text="Registrar Vehículo" Clicked="RegisterVehicle_Clicked"/>
            <Button Text="Volver" Clicked="OnVolverButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>