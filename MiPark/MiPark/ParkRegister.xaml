<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiPark.ParkRegister"
             Title="Registro de Garagem">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Entry x:Name="streetEntry" Placeholder="Calle"/>
            <Entry x:Name="numberEntry" Placeholder="Número"/>
            <Entry x:Name="additionalInfoEntry" Placeholder="Información adicional"/>
            <Entry x:Name="cityEntry" Placeholder="Ciudad"/>
            <Entry x:Name="provinceEntry" Placeholder="Provincia"/>
            <Entry x:Name="zipCodeEntry" Placeholder="Código Postal"/>
            <Entry x:Name="countryEntry" Placeholder="País" Text="España"/>
            <CheckBox x:Name="changeCountryCheckbox" CheckedChanged="OnCountryCheckboxChanged"/>
            <Label Text="Cambiar País"/>
            <Button Text="Registrar Garagem" Clicked="OnRegisterGarageClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
